{{> header}}

<h2>Drop a dream of your own or simply browse other people's dreams!</h2>

{{!-- Form to input dream data --}}
<main>
    <div class="jumbotron jumbotron-fluid">
        <div class="splashbox">
            <h5 class="display-4">Drop Dreams Here:</h5>
            <form action="/dreams" method="POST">
                <div class="form-group">
                    <label for="dream_description">Drop Dream Here:</label>
                    <textarea class="form-control" rows="5" id="dream_description"></textarea>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="mood">What Mood Were you in Before Sleeping?</label>
                        <input type="text" class="form-control" id="mood" placeholder="Enter Mood Here">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="food">What did you eat before sleeping?</label>
                        <input type="text" class="form-control" id="food" placeholder="Enter Food Here">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="hours_of_sleep">How many total hours did you sleep?</label>
                        <input type="number" class="form-control" id="hours_of_sleep" placeholder="Enter Number Here">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="tv_on">Did you fall asleep with the television on?</label>
                        <select id="tv_on" class="form-control">
                            <option selected>Please Choose One</option>
                            <option value="true">Yes</option>
                            <option value="false">No</option>
                        </select>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Drop Your Dream</button>
            </form>
        </div>
    </div>

    {{!-- displays all available user dreams from data dreams data table --}}
    <div class="jumbotron jumbotron-fluid">
        <div class="splashbox">
            <div class="row">
                <div class="col-lg-12">
                    {{#each dreams}}
                    <div>
                        {{this.dreams}}
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</main>